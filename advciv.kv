<AstTokenWidget>:
    canvas:
        Color:
            rgba: tuple([x/255 for x in self.color] + [.9])
        Rectangle:
            pos: self.pos
            size: self.size

<AdvCivWidget>:
	MapScatter:
		id: map_scatter
        #africa_ast: africa_ast
        #on_size: africa_ast.update_size(self, self.size)
        #on_size: italy_ast.update_size(self, self.size)
        #on_size: phoenecia_ast.update_size(self, self.size)
		Image:
			id: map
			source: 'civ_board.png'
			allow_stretch: True
			keep_ratio: False
			size: root.size
			Scatter:
				do_rotation: False
				do_scale: False
				size: token_spotter.size
				Spotter:
					id: token_spotter
					text: 'X'
					font_size: 15
					size: map.size[0]/68, map.size[1]/48.7
					canvas.before:
						Color:
							rgba: tuple([x/255 for x in [186, 96, 41]] + [.8])
						Rectangle:
							pos: self.pos
							size: self.size
			AstTokenWidget:
				id: africa_ast
                color: [186, 96, 41]
                track: 9
			AstTokenWidget:
				id: italy_ast
                color: [252, 0, 0]
                track: 8
			AstTokenWidget:
				id: phoenecia_ast
                color: [155, 10, 180]
                track: 0
			

